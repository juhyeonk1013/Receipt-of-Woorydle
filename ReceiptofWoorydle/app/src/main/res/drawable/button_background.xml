<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="#F6F6F6"/>

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp" />

    <!-- 테두리 설정: 두께, 색상 -->

    <stroke
        android:width="1dp"
        android:color="@android:color/darker_gray" />

    <corners
        android:radius="30dp"/>
</shape>